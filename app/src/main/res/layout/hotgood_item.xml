<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/hotgood_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/hotgood_tv1"
        app:layout_constraintLeft_toRightOf="@id/hotgood_img"
        app:layout_constraintTop_toTopOf="@+id/hotgood_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hotgood_tv2"
        app:layout_constraintLeft_toRightOf="@id/hotgood_img"
        app:layout_constraintTop_toTopOf="@id/hotgood_img"
        app:layout_constraintBottom_toBottomOf="@id/hotgood_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hotgood_tv3"
        app:layout_constraintLeft_toRightOf="@id/tv"
        app:layout_constraintBottom_toBottomOf="@+id/hotgood_img"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv"
        android:text="ï¿¥"
        app:layout_constraintLeft_toRightOf="@id/hotgood_img"
        app:layout_constraintBottom_toBottomOf="@+id/hotgood_img"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>